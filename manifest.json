{
    "manifest_version": 3,
    "name": "Text Capture",
    "version": "1.0",
    "description": "Capture and display selected text",
    "permissions": ["activeTab","storage","scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
